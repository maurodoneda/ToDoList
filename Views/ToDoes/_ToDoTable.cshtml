@model IEnumerable<ToDoList.Models.ToDo>


<div id="progressBar">


    <div class="progress">
        <div class="progress-bar" role="progressbar" style="width:@(ViewBag.Percent)%">

        </div>
    </div>
</div>

<table class="table">

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.CheckBoxFor(modelItem => item.IsDone, new { id = item.Id, @class = "ActiveCheck" })
                </td>
                <td>
                    @if (!item.IsDone)
                    {

                        @Html.DisplayFor(modelItem => item.Description)
                    }

                    else
                    {
                        <div class="DoneItem">

                            @Html.DisplayFor(modelItem => item.Description)

                        </div>
                    }
                </td>

                <td>
                    <button class="btn" onclick="DeleteId('@item.Id');"><i class="far fa-trash-alt"></i></button>

                </td>
            </tr>
        }
    </tbody>
</table>

<script src="~/js/AddCheckBoxListeners.js"></script>

